{
  "name": "mimis-reader",
  "version": "0.21.0",
  "description": "A e-reader powered by ePubJS & MÃ¯mis",
  "main": "lib/index.js",
  "scripts": {
    "compile": "NODE_ENV=production babel --out-dir lib src/modules",
    "prepare": "npm run compile",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "deploy": "gh-pages -d build/",
    "clean-source": "rimraf lib src public .babelrc .eslintrc .npmignore package.json README.md",
    "precommit": "pretty-quick --staged",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "eslint -c .eslintrc src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dysbulic/mimis-reader.git"
  },
  "authors": [
    "Eyvind Gerhard Sletten",
    "Will Holcomb <dys@dhappy.org>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dysbulic/mimis-reader/issues"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "homepage": "https://dysbulic.github.io/mimis-reader",
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@types/react": "^17.0.0",
    "csstype": "^3.0.5",
    "gh-pages-deploy": "^0.5.1",
    "husky": "^4.3.0",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "react": "^16.13.1",
    "react-dom": "^17.0.1",
    "react-file-reader-input": "^2.0.0",
    "react-scripts": "^4.0.1",
    "rimraf": "^3.0.2",
    "styled-components": "^5.2.1",
    "styled-components-breakpoint": "^2.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.0",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "epubjs": "^0.3.88",
    "framer-motion": "^4",
    "gh-pages": "^3.1.0",
    "prop-types": "^15.7.2",
    "react-icons": "^4.2.0",
    "react-swipeable": "^6.0.0",
    "rm": "^0.1.8"
  },
  "peerDependencies": {
    "react": ">=17.0.1"
  },
  "gh-pages-deploy": {
    "staticpath": "build",
    "prep": [
      "build"
    ],
    "post": [
      "clean-source"
    ],
    "noprompt": false
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "types": "types/index.d.ts"
}
